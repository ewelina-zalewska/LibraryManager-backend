{
  "extends": "./tsconfig.node20.json",
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
